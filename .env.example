# Database
DATABASE_URL="postgresql://username:password@localhost:5432/edgeup?schema=public"

# Redis (Upstash)
UPSTASH_REDIS_REST_URL="https://YOUR_UPSTASH_URL.upstash.io"
UPSTASH_REDIS_REST_TOKEN="YOUR_UPSTASH_TOKEN"

# Dhan API
DHAN_CLIENT_ID="YOUR_DHAN_CLIENT_ID"
DHAN_ACCESS_TOKEN="YOUR_DHAN_ACCESS_TOKEN"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Cron Secret (for Vercel cron jobs)
CRON_SECRET="your-cron-secret-key"

# App Config
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ================================
# MARKET TIMING CONFIG (Optional)
# ================================

# Dashboard refresh interval in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_REFRESH_INTERVAL_MS="30000"

# Analysis window start time in HH:MM format IST (default: 09:15)
NEXT_PUBLIC_ANALYSIS_START_TIME="09:15"

# Analysis window end time in HH:MM format IST (default: 09:25)
NEXT_PUBLIC_ANALYSIS_END_TIME="09:25"

# ================================
# FILTER THRESHOLDS (Optional)
# ================================

# Minimum price change % to qualify (default: 1)
NEXT_PUBLIC_PRICE_CHANGE_THRESHOLD="1"

# Minimum OI change % to qualify (default: 7)
NEXT_PUBLIC_OI_CHANGE_THRESHOLD="7"
